<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.misanthropic.mash.Number_Kids"
    android:id="@+id/number_kids">

    <!-- TODO: Update blank fragment layout -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:text="How big is that family?"
        android:id="@+id/kid_button"
        android:background="#ffffc8e6"
        android:layout_gravity="center"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/mash_kids"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/num_kids1"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:hint="How many kids do you want?" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/num_kids2"
        android:gravity="center"
        android:hint="Second choice?"
        android:layout_below="@+id/num_kids1"
        android:layout_alignLeft="@+id/num_kids1"
        android:layout_alignStart="@+id/num_kids1" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/num_kids3"
        android:gravity="center"
        android:hint="How many would be okay?"
        android:layout_below="@+id/num_kids2"
        android:layout_alignLeft="@+id/num_kids2" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/num_kids3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="How many is too many?" />
</RelativeLayout>
